<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/schedule_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:elevation="8dp"
            android:background="#ffffff">

        <ListView
                android:id="@+id/schedule_drawer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#ffffff" />

        <LinearLayout
                android:id="@+id/schedule_drawer_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="16dp"
                android:background="#ffffff">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:alpha="0.1" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_settings_grey600_24dp"
                    android:drawablePadding="32dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/settings"
                    android:textSize="14sp"
                    android:textColor="#dd000000"
                    android:onClick="openSettings" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_help_grey600_24dp"
                    android:drawablePadding="32dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/help_feedback"
                    android:textSize="14sp"
                    android:textColor="#dd000000"
                    android:onClick="openHelpFeedback" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
